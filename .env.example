# Supabase 설정
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Upstash Redis (Rate Limiting용) - 프로덕션 환경에서 권장
# https://upstash.com/ 에서 무료 계정 생성 후 Redis 데이터베이스 생성
# Primary region: Tokyo (ap-northeast-1) 권장 (한국에서 가장 빠름)
UPSTASH_REDIS_REST_URL=https://xxx-xxx-xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=AXX...

# Firebase Cloud Messaging (FCM) 설정
# Firebase 콘솔에서 프로젝트 생성 후 웹 앱 등록하여 획득
# https://console.firebase.google.com/
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# FCM VAPID Key (Cloud Messaging > Web Push certificates에서 생성)
NEXT_PUBLIC_FCM_VAPID_KEY=

# Sentry 에러 트래킹 (https://sentry.io/)
# 프로덕션 환경에서 에러를 자동으로 Sentry에 리포트합니다.
# 1. Sentry 계정 생성: https://sentry.io/signup/
# 2. 새 프로젝트 생성 (Platform: Next.js 선택)
# 3. DSN 복사 후 아래에 설정
NEXT_PUBLIC_SENTRY_DSN=

# 소스맵 업로드용 (선택적, 프로덕션 디버깅 시 필요)
# Sentry > Settings > Developer Settings > Auth Tokens에서 생성
# Scope: "project:releases" and "project:write" 필요
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# Vercel Analytics (선택사항)
# Vercel 프로젝트에서 자동으로 활성화됨
# 로컬 테스트 시에만 필요
NEXT_PUBLIC_VERCEL_ANALYTICS_MODE=production
VERCEL_ANALYTICS_ID=
